{
  "ssh_connections": [
    {
      "host": "christian-desktop",
      "args": [],
      "projects": [
        {
          "paths": ["/home/christian/scythe/scythe-code"]
        }
      ]
    }
  ],
  "git": {
    "inline_blame": {
      "show_commit_summary": true
    }
  },
  "agent": {
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": false,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "open": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "always_allow_tool_actions": true,
    "enable_feedback": false,
    "default_model": {
      "provider": "ollama",
      "model": "glm-4.6:cloud"
    },
    "model_parameters": []
  },
  "languages": {
    "YAML": {
      "format_on_save": "off",
      "formatter": null
    },
    "CMake": {
      "formatter": null,
      "format_on_save": "off"
    }
  },
  "base_keymap": "VSCode",
  "ui_font_size": 18.0,
  "buffer_font_size": 15.0,
  "theme": "Dark Material Dracula"
}
